# Invoice Assistant Frontend - Docker Environment Configuration
# Copy this file to .env and fill in your actual values

# =================================
# Supabase Configuration (Required)
# =================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
VITE_SUPABASE_SERVICE_KEY=your-service-key-here

# Database Configuration
DB_URL=postgresql://postgres:postgres@localhost:54322/postgres

# =================================
# Application Configuration
# =================================
VITE_APP_ENV=production
VITE_APP_NAME=Invoice Assistant
VITE_APP_VERSION=2.0.22

# API Configuration
VITE_API_BASE_URL=https://api.example.com

# =================================
# Docker Configuration
# =================================
# Build mode: local, staging, production
BUILD_MODE=production

# Container port mapping
PORT=3000

# =================================
# Feature Flags
# =================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false

# =================================
# Optional: Registry Configuration
# =================================
# Uncomment and set if using a container registry
# REGISTRY=docker.io/yourusername
# TAG=latest

# =================================
# Development Configuration
# =================================
# Uncomment for local development
# VITE_APP_ENV=local
# VITE_ENABLE_DEBUG=true
# BUILD_MODE=local